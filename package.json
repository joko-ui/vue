{
  "name": "@joko-ui/vue",
  "version": "1.0.0",
  "description": "Vue 3 UI component library inspired by Joko Widodo's leadership and Indonesian identity",
  "private": false,
  "type": "module",
  "main": "./dist/joko-ui.umd.cjs",
  "module": "./dist/joko-ui.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/joko-ui.js",
      "require": "./dist/joko-ui.umd.cjs"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "vue",
    "vue3",
    "ui",
    "component-library",
    "design-system",
    "jokowi",
    "indonesia",
    "indonesian",
    "ui-kit",
    "joko-ui",
    "presidential"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/joko-ui"
  },
  "homepage": "https://github.com/yourusername/joko-ui#readme",
  "bugs": {
    "url": "https://github.com/yourusername/joko-ui/issues"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:lib": "vite build",
    "preview": "vite preview",
    "type-check": "vue-tsc --build",
    "lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
    "lint:eslint": "eslint . --fix --cache",
    "lint": "run-s lint:*",
    "format": "prettier --write src/",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "vue": "^3.5.0"
  },
  "dependencies": {
    "lucide-vue-next": "^0.548.0"
  },
  "devDependencies": {
    "@prettier/plugin-oxc": "^0.0.4",
    "@storybook/addon-docs": "9.1.15",
    "@storybook/addon-links": "9.1.15",
    "@storybook/vue3-vite": "9.1.15",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.18.11",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.37.0",
    "eslint-plugin-oxlint": "~1.23.0",
    "eslint-plugin-storybook": "^9.1.15",
    "eslint-plugin-vue": "~10.5.0",
    "jiti": "^2.6.1",
    "npm-run-all2": "^8.0.4",
    "oxlint": "~1.23.0",
    "prettier": "3.6.2",
    "storybook": "9.1.15",
    "typescript": "~5.9.0",
    "vite": "^7.1.11",
    "vite-plugin-dts": "^4.5.4",
    "vitepress": "^1.6.4",
    "vue": "^3.5.22",
    "vue-tsc": "^3.1.1"
  }
}
